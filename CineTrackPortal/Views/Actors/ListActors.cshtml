@model CineTrackPortal.Models.PaginatedList<CineTrackPortal.Models.ActorModel>

@{
    ViewData["Title"] = "All Actors";
    var backUrl = Url.Action("Index", "Actors");
    var pageBar = Model.GetPageBar();
}

<div class="container my-4">
    <div class="card shadow-lg border-0 rounded-5 bg-white dashboard-main-card">
        <div class="card-body px-3 py-4">
            <div class="d-flex align-items-center justify-content-center mb-4 text-center" style="position: relative;">
                <a href="@backUrl" class="btn rounded-pill dashboard-action-arrow-btn me-3" style="position: absolute; left: 0; margin-left:22px;">
                    <i class="bi bi-arrow-left"></i>
                </a>
                <div class="flex-grow-1">
                    <h2 class="fw-bold mb-2 text-gradient dashboard-title">
                        <i class="bi bi-collection-play me-2"></i>
                        All Actors
                    </h2>
                    <p class="lead mb-0 text-secondary dashboard-subtitle">
                        Browse the full actor list below.
                    </p>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-striped align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>First Name </th>
                            <th>Last Name</th>
                            <th>Movies</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var actor in Model)
                        {
                            <tr class="selectable-row" tabindex="0" data-actor-id="@actor.ActorId" onclick="window.location.href='@Url.Action("Details", "Actors", new { id = actor.ActorId })'">
                                <td>@actor.FirstName</td>
                                <td>@actor.LastName</td>
                                <td>
                                    @if (actor.Movies != null && actor.Movies.Any())
                                    {
                                        var movieNames = actor.Movies.Select(a => a.Title).ToList();
                                        var firstTwo = movieNames.Take(2).ToList();
                                        var remainingCount = movieNames.Count - 2;
                                        var tooltip = string.Join(", ", movieNames);

                                        <span class="movie-tooltip" data-bs-toggle="tooltip" data-bs-placement="auto" title="@tooltip">
                                            @string.Join(", ", firstTwo)
                                            @if (remainingCount > 0)
                                            {
                                                <span class="text-primary fw-semibold">+@remainingCount more</span>
                                            }
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-secondary">No actors</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a asp-action="Details" asp-route-id="@actor.ActorId" class="btn btn-sm btn-outline-info rounded-pill dashboard-action-btn me-1" title="Details" data-bs-toggle="tooltip" data-bs-placement="auto">
                                        <i class="bi bi-info-circle"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@actor.ActorId" class="btn btn-sm btn-outline-warning rounded-pill dashboard-action-btn me-1" title="Edit" data-bs-toggle="tooltip" data-bs-placement="auto">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@actor.ActorId" class="btn btn-sm btn-outline-danger rounded-pill dashboard-action-btn" title="Delete" data-bs-toggle="tooltip" data-bs-placement="auto">
                                        <i class="bi bi-trash3"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination Controls -->
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center mt-4">
                    <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link" asp-action="ListActors" asp-route-pageIndex="@(Model.PageIndex - 1)">Previous</a>
                    </li>
                    @foreach (var pageNum in pageBar)
                    {
                        if (pageNum.HasValue)
                        {
                            <li class="page-item @(pageNum == Model.PageIndex ? "active" : "")">
                                <a class="page-link" asp-action="ListActors" asp-route-pageIndex="@(pageNum.Value)">@pageNum</a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link">…</span>
                            </li>
                        }
                    }
                    <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                        <a class="page-link" asp-action="ListActors" asp-route-pageIndex="@(Model.PageIndex + 1)">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>


<!-- Keep your existing styles and scripts -->

