@model CineTrackPortal.Models.ActorModel

@{
    ViewData["Title"] = "Actor Details";
    var returnUrl = Context.Request.Query["returnUrl"].FirstOrDefault();
    var isLocal = !string.IsNullOrEmpty(returnUrl) && returnUrl.StartsWith("/");
    var backUrl = isLocal ? returnUrl : Url.Action("ListActors", "Actors");
}

<div class="container my-4">
    <div class="card shadow-lg border-0 rounded-5 bg-white dashboard-main-card">
        <div class="card-body px-4 py-4">
            <div class="d-flex align-items-center justify-content-center mb-4 text-center" style="position: relative;">
                <a href="@backUrl" class="btn rounded-pill dashboard-action-arrow-btn me-3" style="position: absolute; left: 0; margin-left:22px;">
                    <i class="bi bi-arrow-left"></i>
                </a>
                <div class="flex-grow-1">
                    <h2 class="fw-bold mb-2 text-gradient dashboard-title">
                        <i class="bi bi-info-circle me-2"></i>
                        @Model.FirstName @Model.LastName
                    </h2>
                    <p class="lead mb-0 text-secondary dashboard-subtitle">
                        Details for this actor entry.
                    </p>
                </div>
            </div>

            <div class="row g-4 justify-content-center">
                <!-- Main Actor Info -->
                <div class="col-12 col-lg-4">
                    <div class="info-block p-3 rounded-4 h-100 bg-light border mx-auto" style="max-width: 340px;">
                        <h5 class="text-gradient mb-3">Actor Info</h5>
                        <div class="mb-2"><span class="fw-semibold text-secondary">First Name:</span> @Model.FirstName</div>
                        <div class="mb-2"><span class="fw-semibold text-secondary">Last Name:</span> @Model.LastName</div>
                        <div class="mb-2"><span class="fw-semibold text-secondary">Actor ID:</span> <code>@Model.ActorId</code></div>
                        <div class="mb-2">
                            <span class="fw-semibold text-secondary">Movies:</span>
                            @if (Model.Movies != null && Model.Movies.Any())
                            {
                                <span>
                                    @foreach (var movie in Model.Movies)
                                    {
                                        <a asp-controller="Movies"
                                           asp-action="Details"
                                           asp-route-id="@movie.MovieId"
                                           asp-route-returnUrl="@(Context.Request.Path + Context.Request.QueryString)"
                                           class="badge bg-light text-primary border border-primary me-1 mb-1"
                                           style="text-decoration:none;">
                                            @movie.Title
                                        </a>
                                    }
                                </span>
                            }
                            else
                            {
                                <span class="text-secondary">No movies</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

