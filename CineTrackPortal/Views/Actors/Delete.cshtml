@model CineTrackPortal.Models.ActorModel

@{
    ViewData["Title"] = "Delete Actor";
}

@if (ViewBag.EditSuccess != null && ViewBag.EditSuccess)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert" id="editSuccessAlert">
        Actor deleted successfully! All associated movies remain in the database, but are no longer linked to this actor. Redirecting to actors list...
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <script>
        setTimeout(function () {
            window.location.href = '@Url.Action("ListActors", "Actors")';
        }, 2000);
    </script>
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger shadow">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> Delete Actor</h2>
                </div>
                <div class="card-body">
                    <h4 class="text-danger mb-4">Are you sure you want to delete this actor?</h4>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })
                    <dl class="row">
                        <dt class="col-sm-3">First Name</dt>
                        <dd class="col-sm-9">@Model.FirstName</dd>
                        <dt class="col-sm-3">Last Name</dt>
                        <dd class="col-sm-9">@Model.LastName</dd>
                    </dl>
                    <div class="alert alert-warning mt-4" role="alert">
                        <strong>Note:</strong> Deleting this actor will <b>not</b> delete any movie, but will remove the association between this actor and its movies.
                    </div>
                    <form asp-action="Delete" method="post" id="deleteForm" class="mt-3">
                        <input type="hidden" asp-for="ActorId" />
                        <button type="submit" class="btn btn-danger me-2">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                        <a asp-action="ListActors" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancel
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('deleteForm').addEventListener('submit', function (e) {
            var confirmed = confirm('Are you really really really sure you want to proceed?');
            if (!confirmed) {
                e.preventDefault();
            }
        });
    </script>
}