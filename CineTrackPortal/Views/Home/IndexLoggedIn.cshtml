@{
    ViewData["Title"] = "Dashboard";
}

<div class="container my-4">
    <div class="card shadow-lg border-0 rounded-5 bg-white dashboard-main-card">
        <div class="card-body px-3 py-4">
            <div class="text-center mb-4">
                <h2 class="fw-bold mb-2 text-gradient dashboard-title">
                    <i class="bi bi-film me-2"></i>
                    CineTrack Portal Dashboard
                </h2>
                <p class="lead mb-0 text-secondary dashboard-subtitle">
                    Welcome! You are signed in. Access all features below.
                </p>
            </div>
            <div class="dashboard-grid mb-4">
                <a href="/Movies" class="dashboard-link">
                    <div class="dashboard-feature rounded-4 shadow-sm p-3 text-center bg-white border border-1 border-success-subtle">
                        <div class="icon-circle bg-success bg-opacity-10 mb-2 mx-auto">
                            <i class="bi bi-camera-reels-fill fs-4 text-success"></i>
                        </div>
                        <div class="fw-semibold fs-6 mb-1">Movies</div>
                        <div class="text-secondary small mb-1">Browse and manage movie records.</div>
                    </div>
                </a>
                <a href="/Actors" class="dashboard-link">
                    <div class="dashboard-feature rounded-4 shadow-sm p-3 text-center bg-white border border-1 border-info-subtle">
                        <div class="icon-circle bg-info bg-opacity-10 mb-2 mx-auto">
                            <i class="bi bi-person-video fs-4 text-info"></i>
                        </div>
                        <div class="fw-semibold fs-6 mb-1">Actors</div>
                        <div class="text-secondary small mb-1">View and edit actor information.</div>
                    </div>
                </a>
                <a href="/UserManagement" class="dashboard-link">
                    <div class="dashboard-feature rounded-4 shadow-sm p-3 text-center bg-white border border-1 border-primary-subtle">
                        <div class="icon-circle bg-primary bg-opacity-10 mb-2 mx-auto">
                            <i class="bi bi-person-badge-fill fs-4 text-primary"></i>
                        </div>
                        <div class="fw-semibold fs-6 mb-1">System Users</div>
                        <div class="text-secondary small mb-1">Manage user accounts and permissions.</div>
                    </div>
                </a>
                <a href="/Reports" class="dashboard-link">
                    <div class="dashboard-feature rounded-4 shadow-sm p-3 text-center bg-white border border-1 border-warning-subtle">
                        <div class="icon-circle bg-warning bg-opacity-10 mb-2 mx-auto">
                            <i class="bi bi-bar-chart-fill fs-4 text-warning"></i>
                        </div>
                        <div class="fw-semibold fs-6 mb-1">Reports</div>
                        <div class="text-secondary small mb-1">View analytics and generate reports.</div>
                    </div>
                </a>
            </div>
            <div class="text-center">
                <div class="alert alert-success rounded-4 mb-2 dashboard-tip">
                    <strong>Tip:</strong> Use the navigation menu to access all features. You are fully authenticated.
                </div>
                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" method="post" class="d-inline">
                    <button type="submit" class="btn btn-outline-danger btn-md rounded-pill mx-2 px-3 mb-2 dashboard-signout">
                        <i class="bi bi-box-arrow-right me-1"></i>Sign Out
                    </button>
                </form>
                <div>
                    <small class="text-secondary dashboard-powered">
                        Powered by <b>ASP.NET Core</b> (.NET 9, C# 13)
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(120deg, #f8fafc 0%, #e3e9f7 100%);
    }

    .dashboard-main-card {
        background: rgba(255,255,255,0.95);
        border-radius: 2rem;
        border: none;
        box-shadow: 0 8px 32px rgba(60, 72, 88, 0.10), 0 1.5px 4px rgba(0,0,0,0.04);
        backdrop-filter: blur(2px);
    }

    .dashboard-title {
        font-size: 1.6rem;
        letter-spacing: 0.01em;
        margin-bottom: 0.5rem;
    }

    .dashboard-subtitle {
        font-size: 1.02rem;
        color: #6c757d;
        margin-bottom: 0;
    }

    .dashboard-link {
        text-decoration: none;
        display: block;
        width: 100%;
        height: 100%;
        transition: filter 0.08s;
    }

        .dashboard-link:focus {
            outline: none;
            filter: brightness(0.97);
        }

    .dashboard-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.1rem;
        max-width: 600px;
        margin: 0 auto 2rem auto;
    }

    .dashboard-feature {
        transition: box-shadow 0.08s, transform 0.08s, border-color 0.08s, background 0.08s;
        min-height: 110px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
        background: rgba(255,255,255,0.92);
        box-shadow: 0 2px 8px rgba(0,0,0,0.04);
        border: 1.5px solid #e9ecef;
    }

        .dashboard-feature:hover, .dashboard-feature:focus {
            box-shadow: 0 0.5rem 1.5rem rgba(13,110,253,0.13), 0 2px 8px rgba(0,0,0,0.08);
            transform: translateY(-3px) scale(1.035);
            border-color: #0d6efd !important;
            background: linear-gradient(120deg, #f5faff 60%, #f0f4ff 100%);
            z-index: 2;
        }

    .icon-circle {
        width: 38px;
        height: 38px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        box-shadow: 0 1px 4px rgba(0,0,0,0.04);
        margin-bottom: 0.5rem;
        transition: background 0.08s, transform 0.08s;
    }

    .dashboard-feature:hover .icon-circle,
    .dashboard-feature:focus .icon-circle {
        background: #e7f1ff;
        transform: scale(1.12) rotate(-6deg);
    }

    .text-gradient {
        background: linear-gradient(90deg, #0d6efd 0%, #6610f2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .dashboard-feature .fw-semibold {
        letter-spacing: 0.01em;
    }

    .dashboard-tip {
        font-size: 0.95rem;
        background: linear-gradient(90deg, #e7fbe7 0%, #f8fafc 100%);
        border: 1px solid #b6e7c9;
    }

    .dashboard-signout {
        font-size: 1rem;
        font-weight: 500;
        letter-spacing: 0.01em;
        box-shadow: 0 1px 4px rgba(220,53,69,0.06);
        transition: background 0.08s, color 0.08s;
    }

        .dashboard-signout:hover, .dashboard-signout:focus {
            background: #dc3545;
            color: #fff;
            border-color: #dc3545;
        }

    .dashboard-powered {
        font-size: 0.92rem;
        color: #adb5bd;
    }
</style>