@{
    ViewData["Title"] = "Dashboard";
}

@if (!User.Identity.IsAuthenticated)
{
    <div class="card shadow-lg mt-5 mb-4 border-0 rounded-4 narrow-card">
        <div class="card-header bg-gradient bg-primary text-white text-center rounded-top-4">
            <h3 class="mb-0">
                <i class="bi bi-film me-2"></i>
                Welcome to CineTrack Portal!
            </h3>
        </div>
        <div class="card-body p-5">
            <div class="row align-items-center justify-content-center mb-4">
                <div class="col-auto d-none d-md-block text-center">
                    <i class="bi bi-person-check fs-1 text-primary"></i>
                </div>
                <div class="col-md-8">
                    <p class="lead text-center mb-3">
                        <span class="fw-bold text-primary-emphasis">CineTrack Portal</span> is your modern solution for tracking, recording, and analyzing movies, actors, and managing system users.
                    </p>
                    <p class="text-center mb-4">
                        <span class="badge bg-info text-dark me-1">Movies</span>
                        <span class="badge bg-info text-dark me-1">Actors</span>
                        <span class="badge bg-info text-dark me-1">System Users</span>
                    </p>
                    <div class="alert alert-info text-center mb-4">
                        <strong>Get started:</strong>
                        <a href="/Identity/Account/Register" class="btn btn-outline-primary mx-2">Register</a>
                        <span>or</span>
                        <a href="/Identity/Account/Login" class="btn btn-outline-primary mx-2">Sign In</a>
                    </div>
                    <p class="text-center text-secondary mb-2">
                        <i class="bi bi-info-circle"></i>
                        You must be signed in to access all dashboard features.
                    </p>
                    <p class="text-center">
                        <span class="fw-semibold text-primary-emphasis">Use the menu to explore movies, actors, and manage users.</span>
                    </p>
                </div>
            </div>
            <hr />
            <div class="alert alert-secondary mt-3 mb-0 text-center">
                <small>
                    Powered by <span class="fw-bold">ASP.NET Core</span>
                    (<span class="text-secondary">.NET 9, C# 13</span>).
                </small>
            </div>
        </div>
    </div>
}
else
{
    <div class="container mt-5">
        <div class="row justify-content-center mb-4">
            <div class="col-12 text-center">
                <h2 class="fw-bold mb-3">
                    <i class="bi bi-film me-2"></i>
                    CineTrack Portal Dashboard
                </h2>
                <p class="lead">
                    Welcome! You are signed in. Access all features below.
                </p>
            </div>
        </div>
        <div class="row justify-content-center mb-5">
            <div class="col-md-4 mb-3">
                <div class="card shadow-lg border-0 h-100 rounded-4">
                    <div class="card-body text-center">
                        <i class="bi bi-collection-play-fill fs-1 text-primary"></i>
                        <h5 class="card-title mt-2">Movies</h5>
                        <a href="/Movies" class="btn btn-primary btn-lg rounded-pill mt-3 px-4">View Movies</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card shadow-lg border-0 h-100 rounded-4">
                    <div class="card-body text-center">
                        <i class="bi bi-people-fill fs-1 text-success"></i>
                        <h5 class="card-title mt-2">Actors</h5>
                        <a href="/Actors" class="btn btn-success btn-lg rounded-pill mt-3 px-4">View Actors</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card shadow-lg border-0 h-100 rounded-4">
                    <div class="card-body text-center">
                        <i class="bi bi-person-badge-fill fs-1 text-info"></i>
                        <h5 class="card-title mt-2">System Users</h5>
                        <a href="/UserManagement" class="btn btn-info btn-lg rounded-pill mt-3 px-4 text-white">View Users</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-12 text-center">
                <div class="alert alert-success rounded-4">
                    <strong>Tip:</strong> Use the navigation menu to access all features. You are fully authenticated.
                </div>
                <div class="mb-3">
                    <a href="/Identity/Account/Logout" class="btn btn-outline-danger btn-lg rounded-pill mx-2 px-4">Sign Out</a>
                </div>
                <small class="text-secondary">
                    Powered by <b>ASP.NET Core</b> (.NET 9, C# 13)
                </small>
            </div>
        </div>
    </div>
}