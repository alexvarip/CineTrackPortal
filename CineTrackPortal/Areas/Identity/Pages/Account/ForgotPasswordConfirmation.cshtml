@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}

<style>
    .confirmation-wrapper {
        min-height: 80vh;
        display: flex;
        align-items: flex-start;
        justify-content: center;
        padding-top: 3rem;
        background: linear-gradient(180deg, #f7faff 0%, #e3eafc 100%);
    }

    .confirmation-card {
        border-radius: 20px;
        max-width: 420px;
        width: 100%;
        border: none;
        box-shadow: 0 6px 18px rgba(8,20,50,0.08);
        overflow: hidden;
        background: #fff;
    }

    .confirmation-hero {
        background: linear-gradient(90deg, #258cfb 0%, #6a82fb 100%);
        color: #fff;
        padding: 1.25rem 1rem 1rem 1rem;
        text-align: center;
    }

    .confirmation-title {
        font-weight: 700;
        letter-spacing: 1px;
        margin: 0;
        font-size: 1.35rem;
        color: #fff;
    }

    .confirmation-divider {
        border-top: 2px solid #e3eafc;
        margin: 1.5rem 0 1.5rem 0;
    }

    .confirmation-body {
        padding: 2.5rem 2rem 2rem 2rem;
        text-align: center;
    }

    .confirmation-text {
        color: #444;
        font-size: 1.1rem;
        margin-bottom: 0;
    }
    
</style>

<div class="confirmation-wrapper">
    <div class="confirmation-card">
        <div class="confirmation-hero">
            <h2 class="confirmation-title">@ViewData["Title"]</h2>
        </div>
        <div class="confirmation-body">
            <hr class="confirmation-divider" />
            <p class="confirmation-text">
                Please check your email to reset your password.
            </p>
        </div>
    </div>
</div>