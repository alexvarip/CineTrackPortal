@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}


<div class="manage-wrapper d-flex align-items-start justify-content-center">
    <div class="card manage-card shadow-lg">
        <div class="manage-hero">
            <h2 class="manage-title">Manage your account</h2>
            <p class="manage-subtitle mb-0">Change your account settings</p>
        </div>

        <div class="card-body">
            <hr class="manage-divider" />
            <div class="row g-4">
                <div class="col-md-3">
                    <div class="manage-panel">
                        <partial name="_ManageNav" />
                    </div>
                </div>

                <div class="col-md-9">
                    <div class="manage-content">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}