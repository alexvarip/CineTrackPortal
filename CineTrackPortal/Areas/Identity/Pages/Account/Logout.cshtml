@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<div class="container py-5 d-flex justify-content-center align-items-center" style="min-height: 60vh;">
    <div class="card shadow-lg border-0 rounded-4" style="max-width: 420px; width: 100%;">
        <div class="card-body text-center">
            <h1 class="mb-4">@ViewData["Title"]</h1>
            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                    <button type="submit" class="btn btn-outline-danger btn-lg rounded-pill px-4">
                        <i class="bi bi-box-arrow-right me-2"></i>Click here to Logout
                    </button>
                </form>
            }
            else
            {
                <div class="alert alert-success rounded-4 mt-3 mb-0">
                    You have successfully logged out of the application.
                </div>
            }
        </div>
    </div>
</div>